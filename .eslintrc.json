{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "extends": [
        "plugin:prettier/recommended"
      ],
      "rules": {
        "react-hooks/exhaustive-deps": "warn",
        "react/no-unknown-property": "off"
      },
      "plugins": [
        "react", "react-hooks", "@typescript-eslint"
      ]
    }
  ]
}